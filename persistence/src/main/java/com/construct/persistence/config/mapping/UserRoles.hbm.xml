<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "../dtd/hibernate-mapping-3.0.dtd">
 <!-- http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd -->
<hibernate-mapping>
	<class name="com.construct.persistence.entity.UserRoles" table="USER_ROLES">
		<id name="id" type="java.lang.String" column="id">
			<generator class="uuid"/>
		</id>
		<property name="username" type="java.lang.String" column="username"/>
		<property name="role" type="java.lang.String" column="role"/>
		<!-- 定义一个查询，名称为getUserByName (这里将<query>放到<class>节点里面来) 引用时需要带包名类名即完整的路径名--> 
		<query name="getUserByName_">
			<![CDATA[from UserRoles where username = :name]]>
		</query>
	</class>
	
	<!-- 定义一个查询，名称为getUserByName -->
	<query name="getUserRolesByUsername">
		<![CDATA[from UserRoles where username = :name]]>
	</query>
	<sql-query name="getUserRolesBySql">
		<![CDATA[select id, name from user_roles where username = :name]]>
	</sql-query>
	
	
</hibernate-mapping>