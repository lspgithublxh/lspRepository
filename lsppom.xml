
<build>
	  <plugins>
			<plugin>
					<artifactId>maven-assembly-plugin</artifactId>
					<version>2.4.1</version>
					<configuration>
                    <!-- not append assembly id in release file name -->
						 <archive>
						  <manifest>
							<mainClass>cn.outofmemory.MainClass</mainClass>
						  </manifest>
						</archive>
						<descriptorRefs>
						  <descriptorRef>jar-with-dependencies</descriptorRef>
						</descriptorRefs>
					</configuration>
					<executions>
						<execution>
							<id>make-zip</id>
							<!-- �󶨵�package�������ڽ׶��� -->
							<phase>package</phase>
							<goals>
								<!-- �󶨵�package�������ڽ׶��� -->
								<goal>single</goal>
							</goals>
							<configuration>
								<descriptors> <!--�����ļ�·��-->
									<descriptor>src/assembly/assembly.xml</descriptor>
								</descriptors>
							</configuration>
						</execution>
					</executions>
			</plugin>
	  </plugins>
  </build>